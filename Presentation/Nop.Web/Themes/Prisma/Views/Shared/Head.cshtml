@using Nop.Core

@inject IWorkContext workContext

@{
    var supportRtl = (await workContext.GetWorkingLanguageAsync()).Rtl;

    if (supportRtl)
    {
        NopHtml.AppendCssFileParts("~/Themes/Prisma/Content/css/1280.rtl.css");
        NopHtml.AppendCssFileParts("~/Themes/Prisma/Content/css/1024.rtl.css");
        NopHtml.AppendCssFileParts("~/Themes/Prisma/Content/css/768.rtl.css");
        NopHtml.AppendCssFileParts("~/Themes/Prisma/Content/css/480.rtl.css");
        NopHtml.AppendCssFileParts("~/Themes/Prisma/Content/css/mobile.rtl.css");
        NopHtml.AppendCssFileParts("~/Themes/Prisma/Content/css/styles.rtl.css");
    }
    else
    {
        NopHtml.AppendCssFileParts("~/Themes/Prisma/Content/css/1280.css");
        NopHtml.AppendCssFileParts("~/Themes/Prisma/Content/css/1024.css");
        NopHtml.AppendCssFileParts("~/Themes/Prisma/Content/css/768.css");
        NopHtml.AppendCssFileParts("~/Themes/Prisma/Content/css/480.css");
        NopHtml.AppendCssFileParts("~/Themes/Prisma/Content/css/mobile.css");
        NopHtml.AppendCssFileParts("~/Themes/Prisma/Content/css/styles.css");
    }

    NopHtml.AppendCssFileParts("~/Plugins/SevenSpikes.Core/Styles/perfect-scrollbar.min.css");

    <script src="~/Plugins/SevenSpikes.Core/Scripts/footable.min.js" asp-location="Footer"></script>
    <script src="~/Plugins/SevenSpikes.Core/Scripts/perfect-scrollbar.min.js" asp-location="Footer"></script>
    <script src="~/Plugins/SevenSpikes.Core/Scripts/sevenspikes.core.min.js" asp-location="Footer"></script>
    <script src="~/Plugins/SevenSpikes.Core/Scripts/sevenspikes.theme.min.js" asp-location="Footer"></script>

    <script src="~/Themes/Prisma/Content/scripts/prisma.js" asp-location="Footer"></script>
}